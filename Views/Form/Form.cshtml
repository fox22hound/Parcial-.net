@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Formulario de Parcial</title>
</head>
<body>
    <form action="enviar-datos">
        <fieldset>
            <legend>
                Formulario de Parcial
            </legend>

            <label for="text-checkbox">Condición Inscripto:</label>
            <select name="selection" id="options-select">
                <option value="default"></option>
                <option value="monotributista">Monotributista</option>
                <option value="resp-inscripto">Responsable Inscripto</option>
                <option value="exento">Exento</option>
            </select> <br>
            <p>
                <label for="cuit" id="cuit" title="required">CUIT: </label>
                <input type="number" id="cuit" placeholder="Ingrese su CUIT">  <br>
            </p>
            <label for="raz-social" id="raz-social">Razón Social:</label>
            <input type="text" id="raz-social"> <br> <br>
            <label for="domicilio"> Domicilio:</label>
            <input type="text" id="domicilio" placeholder="Ingrese su domicilio"> <br> <br>
            <label for="email">Email:</label>
            <input type="email" id="email" placeholder="Ingrese su email">
            <label for="checkbox-text" id="checkbox"></label>
            <p>Condición Venta:</p>
            <div>
                <input type="checkbox">
                <label for="contado">Contado</label>
            </div>
            <div>
                <input type="checkbox">
                <label for="cheque">Cheque</label>
            </div>
            <div>
                <input type="checkbox">
                <label for="ticket">Ticket</label>
            </div>
            <div>
                <input type="checkbox">
                <label for="otra">Otra</label>
            </div>
            <br>

            <button type="Submit">Enviar Formulario</button>






        </fieldset>
    </form>

</body>


</html>
